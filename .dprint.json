{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "projectType": "educational",
  "incremental": true,
  "lineWidth": 80,
  "useTabs": true,
  "indentWidth": 4,
  "newLineKind": "lf",
  "includes": ["**/*.{json,js,cjs,ts,md,css,svelte}"],
  "excludes": ["**/node_modules", "**/*-lock.json", "**/*-lock.yaml"],
  "plugins": [
    "https://plugins.dprint.dev/json-0.11.0.wasm",
    "https://plugins.dprint.dev/typescript-0.46.0.wasm",
    "https://plugins.dprint.dev/markdown-0.7.1.wasm"
  ],
  "json": {
    "indentWidth": 2,
    "useTabs": false,
    "commentLine.forceSpaceAfterSlashes": true,
    "ignoreNodeCommentText": "dprint-ignore"
  },
  "typescript": {
    "semiColons": "prefer",
    "quoteStyle": "alwaysDouble",
    "useBraces": "whenNotSingleLine"
  },
  "markdown": {
  }
}
